{
  "name": "storadapt",
  "version": "0.1.0",
  "description": "A flexible storage adapter with deep path updates and automatic serialization",
  "type": "module",
  "keywords": [
    "storage",
    "local storage"
  ],
  "license": "MIT",
  "homepage": "https://github.com/OpenKnights/storadapt#readme",
  "bugs": {
    "url": "https://github.com/OpenKnights/storadapt/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenKnights/storadapt.git"
  },
  "author": "king3 <w2196592083@gmail.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsdown",
    "build:play": "tsdown cli/play.ts -d cli/.output/ -f esm",
    "play": "node cli/.output/play.js",
    "test": "vitest",
    "test:adapter": "vitest test/adapter.test.ts",
    "test:integration": "vitest test/integration.test.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier . --write",
    "release": "bumpp && pnpm publish",
    "release:beta": "bumpp && pnpm publish --tag=beta"
  },
  "devDependencies": {
    "@king-3/eslint-config": "1.0.8",
    "@king-3/prettier-config": "^1.0.2",
    "@types/node": "^24.9.2",
    "@types/node-localstorage": "^1.3.3",
    "bumpp": "^10.2.3",
    "eslint": "^9.33.0",
    "node-localstorage": "^3.0.5",
    "prettier": "^3.6.2",
    "tsdown": "^0.14.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "superjson": "^2.2.5"
  }
}
